<html>
    <head>
        <title>Individual Store</title>
        <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css'>

    </head>
    <body>
        <div class = "container">

            <div class = "col-lg-8 text-center">

                <h1>{{ store.getStoreName }}</h1>

                <div class = "col-lg-4 text-center">

                    <h3>Here are this store's brands:</h3>

                    {% if brands is not empty %}
                        <ul>
                            {% for brand in brands %}
                                <li><a href="/brand/{{ brand.getId }}">{{ brand.getBrandName }}</a></li>
                            {% endfor %}
                        </ul>
                    {% endif %}

                    <br>
                    <h4>Add a brand to this store?</h4>
                    <br>
                    <form action = "/individual_store/{{ store.getId }}/add_brand" method = "post">
                        <input id = "id" name = "id" type = "hidden" value = "{{ store.getId }}">
                        <label for = "brand_name">Enter a shoe brand for this store:</label>
                        <input id = "brand_name" name = "brand_name" type = "text">
                        <br>
                        <button type = "submit" class = "btn btn-primary btn-md">Add Brand</button>
                    </form>

                    <form action = "/individual_store/{{ store.getId }}" method = "patch">
                        <div class = "form-group">
                            <input name = "_method" type = "hidden" value = "patch">
                            <label for = "store_name">Rename this store:</label>
                            <input id = "store_name" name = "store_name" class = "form-control" type = "text" value = "{{ store.getStoreName }}">
                            <br>
                            <button type = "submit" class = "btn btn-primary">Update</button>
                        </div>
                    </form>

                    <br>
                    <h4>Delete this store?</h4>
                    <form action = "/individual_store/{{ store.getId }}" method = "post">
                        <input type = "hidden" name = "_method" value = "delete">
                        <button type = "submit" class = "btn-xs btn-danger">DELETE</button>
                    </form>
                </div>

            </div>

        </div>
    </body>
</html>
