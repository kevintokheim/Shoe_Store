<html>
    <head>
        <title>Brand</title>
        <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css'>

    </head>
    <body>
        <div class = "container">

            <h1>{{ brand.getBrandName }}</h1>
            <div class = "col-lg-8">

                {% if stores is not empty %}
                    <ul>
                        {% for store in stores %}
                        <li>
                            <a href = '/individual_store/{{ store.getId }}'>{{ store.getStoreName }}</a>
                        </li>
                        {% endfor %}
                    </ul>
                {% endif %}

                <h4>Add another store to this brand</h4>
                <br>
                <form action = '/brand/{{ brand.getId }}/add_store' method = 'post'>
                    <input id = 'store_name' name = 'store_name' type = 'hidden' value = '{{ brand.getId }}'>
                    <label for = 'store_name'>Enter a new store:</label>
                    <input id = 'store_name' name = 'store_name' type = 'text'>
                    <br>
                    <button type ='submit' class = 'btn btn-primary btn-md'>Add store</button>
                </form>

                <form action = '/'>
                    <button type = 'submit' class = 'btn-lg'>HOME</button>
                </form>

            </div>

        </div>
    </body>
</html>
